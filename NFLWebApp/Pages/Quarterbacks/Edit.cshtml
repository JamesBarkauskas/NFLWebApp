@page
@model NFLWebApp.Pages.Quarterbacks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Quarterback</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Quarterback.ID" />
            <div class="form-group">
                <label asp-for="Quarterback.Name" class="control-label"></label>
                <input asp-for="Quarterback.Name" class="form-control" />
                <span asp-validation-for="Quarterback.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quarterback.Team" class="control-label"></label>
                <input asp-for="Quarterback.Team" class="form-control" />
                <span asp-validation-for="Quarterback.Team" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quarterback.Touchdowns" class="control-label"></label>
                <input asp-for="Quarterback.Touchdowns" class="form-control" />
                <span asp-validation-for="Quarterback.Touchdowns" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quarterback.Yards" class="control-label"></label>
                <input asp-for="Quarterback.Yards" class="form-control" />
                <span asp-validation-for="Quarterback.Yards" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
